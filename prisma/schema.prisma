datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Sentences {
  text               String              @unique
  ruby               String              @unique
  SentenceIndicators SentenceIndicators?

  @@id([text, ruby])
}

model SentenceIndicators {
  text       String    @unique
  ruby       String    @unique
  sentence   Sentences @relation(fields: [text, ruby], references: [text, ruby])
  level      Int
  difficulty Int

  @@id([text, ruby])
}
